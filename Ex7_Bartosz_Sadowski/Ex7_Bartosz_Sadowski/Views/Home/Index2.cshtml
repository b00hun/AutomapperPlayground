@model IEnumerable<Ex7_Bartosz_Sadowski.Dto.CarDto>

@{
    ViewData["Title"] = "Index2";
}

<h1>Samochody</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHybrid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
